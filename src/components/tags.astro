---
export interface Props {
  tags: string[]
}

const { tags } = Astro.props as Props
---

<div class="flex flex-row flex-wrap items-start gap-2">
  {
    tags.map(tag => (
      <a
        href={`${import.meta.env.BASE_URL}tags/${encodeURIComponent(tag)}/`}
        class="inline-block py-1 px-3 rounded bg-purple-600 hover:bg-pink-600 text-white text-xs font-medium tracking-tight uppercase"
      >
        {tag}
      </a>
    ))
  }
</div>
